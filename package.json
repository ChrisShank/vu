{
  "private": "true",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "format": "prettier --write --parser typescript \"packages/**/*.ts?(x)\"",
    "lint": "eslint --ext .ts packages/*/src/**",
    "ls-lint": "ls-lint",
    "test": "jest"
  },
  "gitHooks": {
    "pre-commit": "ls-lint && lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@typescript-eslint/parser": "^3.9.0",
    "eslint": "^7.6.0",
    "jest": "^26.3.0",
    "lint-staged": "^10.2.11",
    "ls-lint": "^0.1.2",
    "playwright": "^1.3.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7",
    "yorkie": "^2.0.0"
  }
}
