{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "types": ["jest", "node", "playwright"],
    "rootDir": ".",
    "paths": {
      "@vu/*": ["packages/*/src"]
    }
  },
  "include": ["packages/global.d.ts", "packages/*/src", "packages/*/__tests__", "test-dts"]
}
